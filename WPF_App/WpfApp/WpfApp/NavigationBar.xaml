<UserControl x:Class="WpfApp.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="30" Width="800" Background="Blue">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Home" Width="100" Click="HomeButton_Click" Margin="5"/>
            <Button Content="Login" Width="100" Click="LoginButton_Click" Margin="5"/>
            <Button Content="Search for Transport" Width="150" Click="SearchButton_Click" Margin="5"/>
        </StackPanel>
    </DockPanel>
</UserControl>
